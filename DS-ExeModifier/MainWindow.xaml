        <Button 
            x:Name="button_Apply" Content="Modify EXE" Click="button_Apply_Click"
            FontSize="14" VerticalContentAlignment="Center"
            HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"
            Height="28"  Width="110"
            />
