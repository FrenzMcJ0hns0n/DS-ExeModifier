<Window x:Class="DS_ExeModifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DS_ExeModifier"
        mc:Ignorable="d"
        Title="DS-ExeModifier" Loaded="Window_Loaded"
        Height="480" Width="420" ResizeMode="CanMinimize">

    <Grid>
        <TextBox 
            x:Name="textBox_targetExe" TextWrapping="Wrap" Text="Version" IsReadOnly="True"
            HorizontalAlignment="Center" VerticalAlignment="Top" BorderThickness="0"
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,16,0,0"
            Height="23" Width="160"
            />
        <GroupBox 
            Header="Where to load the game data from ?" FontSize="19" FontWeight="DemiBold"
            HorizontalAlignment="Center" VerticalAlignment="Top" 
            Height="342" Width="340" Margin="0,68,0,0"
            />

        <Label 
            Content="" FontSize="14" FontWeight="DemiBold"
            HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0"
            />

        <Label 
            Content="Data" HorizontalContentAlignment="Center" FontWeight="DemiBold"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="49,135,0,0" 
            Width="96"
            />
        <Label 
            Content=".bdt archive" HorizontalContentAlignment="Center"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="152,126,0,0" 
            Width="96"
            />
        <Label 
            Content="(default)" HorizontalContentAlignment="Center"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="152,143,0,0" 
