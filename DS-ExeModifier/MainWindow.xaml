        <!-- "Tick all" checkboxes
        <Border 
            BorderBrush="LightGray" BorderThickness="1" CornerRadius="4"
            HorizontalAlignment="Center" VerticalAlignment="Top" Margin="59,370,59,0"
            Height="28" Width="296"
            />
        <Label 
            Content="Tick all" FontWeight="DemiBold" HorizontalContentAlignment="Center"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,371,0,0" Width="59"
            />
        <CheckBox
            x:Name="checkBox_allTicked_fromArchive"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,378,0,0"
            />
        <CheckBox
            x:Name="checkBox_allTicked_fromFolders"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="297,378,0,0"
            />
