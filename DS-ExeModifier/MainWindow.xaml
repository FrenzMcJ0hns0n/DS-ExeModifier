            />
        <Label 
            Content="Extracted folders" HorizontalContentAlignment="Center"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="247,126,0,0" 
            Width="103"
            />
        <Label 
            Content="(mod)" HorizontalContentAlignment="Center"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="247,143,0,0" 
            Width="103"
            />

        <!-- dvdbnd0 -->
        <Border 
